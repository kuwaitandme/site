//- #page-hero
  img(src="/images/hero/landing.jpg")

news-header
nav
  a(fn-route="/news").active Top
  a(fn-route="/news/recent") Recent
  a(fn-route="/news/comments") Comments
  a(fn-route="/news/search") Search
  //- a(fn-route="/admin/news/filters") Filters
  a(fn-route="/news/create", ng-if="loggedIn") Submit


ul.stories
  li.story(ng-repeat="story in stories track by $index")
    .story_liner
      .index {{ $index + 1}}
      .voters
        a.upvoter(ng-if="can_upvote")
        a.upvoter(fn-route="/login", ng-if="!can_upvote")
      .details
        span.link
          span(ng-if="!story.is_gone")
            a(fn-route="{{ story.url }}") {{ story.title }}
          span(ng-if="story.is_gone")
            | [Story removed by {{ story.is_moderated ? "moderator" : "original submitter" }}]

        span.tags(ng-if="!story.is_gone")
        a.domain(ng-href="{{ story.url }}") (google.com)
        | &nbsp;&middot;&nbsp;
        span {{ story.score || 0}} points by&nbsp;
        span
          a(fn-route="/user/@puskin") puskin
        //- | &nbsp;&middot;&nbsp;
        //- span.comments_label
          a(fn-route="/news/story/{{ story.shortid }}") {{ story.comments_count }} {{ story.comments_count == 1 ? "comment" : "comments" }}
        | &nbsp;&middot;&nbsp;
        span.timestamp {{ story.created_at | prettydate }}

.page-links
  a(fn-route="/news/page/2") More
