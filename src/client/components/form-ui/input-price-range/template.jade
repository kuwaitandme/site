.field(
  ng-init="opened=false"
  ng-class="{opened: opened}"
  ng-click="opened=!opened; onTouch()") {{ priceText }}

.placeholder(ng-class="{shrink: priceText}") {{ placeholder }}

ul(ng-class="{opened: opened}")
  li.value(ng-click="opened=false; priceType=0") Free
  li.value(ng-click="opened=false; priceType=1") Contact Owner
  li
    input(type="number"
      min=0
      ng-focus="priceType=2"
      ng-model="priceValueMin"
      placeholder="minimum")

    input(type="number"
      min=0
      ng-focus="priceType=2"
      ng-model="priceValueMax"
      placeholder="maximum")
