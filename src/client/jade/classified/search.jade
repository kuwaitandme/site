#page-hero
  img(ng-image-loader!="<%= staticUrl %>/images/hero/{{ heroURL }}",
    ng-image-success="onHeroLoad")

section(ng-if="!parentCategory.id").category-chooser.row
  h1.columns Choose a category
  section.columns(ng-include="'components/category-list'")

section(ng-if="parentCategory.id").category-results.row
  h1 {{ parentCategory.name }}
  h2(ng-if="childCategory.id") {{ childCategory.name }}
  section(ng-if="displayClassifiedList")
    .classified-list-container(ng-include="'components/classified-list'")
    #filterbox