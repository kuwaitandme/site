style.
  body[ng-cloak] {
    background: #FFF; }
    body[ng-cloak] #page-loading {
      display: block; }
    body[ng-cloak] main, body[ng-cloak] header, body[ng-cloak] #page-hero, body[ng-cloak] footer {
      display: none; }

  #page-loading {
    display: none;
    position: absolute;
    background: #eee;
    top: 50%;
    left: 50%;
    margin-left: -100px;
    width: 200px; }
    #page-loading #page-loading-bar {
      transition: all 300ms ease-out;
      width: 0%;
      background: #f60;
      height: 2px; }

