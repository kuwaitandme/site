    html,body{height:100%}body.initializing{overflow-y:hidden;background:#FFF}body.initializing #page-loader{display:block}.robots{display:none}#page-loader{position:absolute;background:#eee;top:50%;left:50%;margin-left:-100px;z-index:1;width:200px}#page-loader #page-loading-bar{transition:all 300ms ease-out;width:0;background:#f60;height:2px}

