    .container.IF.success.ENDIF.success(class='<!-- -->hide<!-- -->')
      p
      h1 Welcome to the NodeBB Installer
      | &#x9;&#x9;&#x9;You are just a few steps away from launching your own NodeBB forum!
      | &#x9;&#x9;
      p
      | &#x9;&#x9;
      form#install(action='/', method='post')
        .admin
          p
          h1
            small Create an Administrator account
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          hr
          | &#x9;&#x9;&#x9;&#x9;
          p
          | &#x9;&#x9;&#x9;&#x9;
          .row.input-row
            .col-sm-7.col-xs-12.input-field
              label(for='admin:username') Username
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              input.form-control(type='text', name='admin:username', value='<!-- IF admin:username -->{admin:username}<!-- ENDIF admin:username -->', placeholder='Username')
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            .col-sm-5.help-text(data-help='Enter an <strong>alphanumeric username</strong>. Spaces between words are allowed. You can always change your username later on your profile page.')
          | &#x9;&#x9;&#x9;&#x9;
          .row.input-row
            .col-sm-7.col-xs-12.input-field
              label(for='admin:email') Email Address
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              input.form-control(type='text', name='admin:email', value='<!-- IF admin:email -->{admin:email}<!-- ENDIF admin:email -->', placeholder='Email Address')
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            .col-sm-5.help-text(data-help='Please enter your email address.')
          | &#x9;&#x9;&#x9;&#x9;
          .row.input-row
            .col-sm-7.col-xs-12.input-field
              label(for='admin:password') Password
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              input.form-control(type='password', name='admin:password', value='<!-- IF admin:password -->{admin:password}<!-- ENDIF admin:password -->', placeholder='Password')
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            .col-sm-5.help-text(data-help='Use a combination of numbers, symbols, and different cases. You can change the strictness of password creation in the Admin Control Panel.')
          | &#x9;&#x9;&#x9;&#x9;
          .row.input-row
            .col-sm-7.col-xs-12.input-field
              label(for='admin:passwordConfirm') Confirm Password
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              input.form-control(type='password', name='admin:passwordConfirm', value='<!-- IF admin:passwordConfirm -->{admin:passwordConfirm}<!-- ENDIF admin:passwordConfirm -->', placeholder='Confirm Password')
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            .col-sm-5.help-text(data-help='Please confirm your password.')
        // IF error
        a#database-error
        // ENDIF error
        // IF !skipDatabaseSetup
        .database
          p
          h1
            small Configure your database
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          hr
          | &#x9;&#x9;&#x9;&#x9;
          p
          | &#x9;&#x9;&#x9;&#x9;
          .row.input-row
            .col-sm-7.col-xs-12.input-field
              label(for='database') Database Type
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              select.form-control(name='database')
                option(value='redis') Redis
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                option(value='mongo') MongoDB
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            .col-sm-5.help-text(data-help='Leave the fields blank to use the default settings.')
              // IF error
              | There was an error connecting to your database. Please try again.
              // ENDIF error
          | &#x9;&#x9;&#x9;&#x9;
          #database-config
        // ENDIF !skipDatabaseSetup
        button#submit.btn.btn-lg.btn-success(type='submit')
          | Install NodeBB 
          i.fa.fa-spinner.fa-spin.hide
    | &#x9;
