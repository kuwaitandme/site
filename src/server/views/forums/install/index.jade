            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
            input.form-control(type='<!-- IF hidden -->password<!-- ELSE -->text<!-- ENDIF hidden -->', name='{databases.questions.name}', placeholder='{databases.questions.default}', value='{databases.questions.default}')
        // END questions
