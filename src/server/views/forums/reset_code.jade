html
  body
    ol.breadcrumb
      // BEGIN breadcrumbs
      li(itemscope='itemscope', itemtype='http://data-vocabulary.org/Breadcrumb', <!--='', if='', @last='', --='')
        | class=&quot;active&quot;
        // ENDIF @last
        | &gt;
        // IF !@last
        a(href='{breadcrumbs.url}', itemprop='url')
          // ENDIF !@last
          span(itemprop='title')
            | {breadcrumbs.text}
            // IF @last
            // IF !feeds:disableRSS
            // IF rssFeedUrl
            a(target='_blank', href='{rssFeedUrl}')
              i.fa.fa-rss-square
            // ENDIF rssFeedUrl
            // ENDIF !feeds:disableRSS
            // ENDIF @last
          // IF !@last
        // ENDIF !@last
      // END breadcrumbs
    // IF valid
    .well
      // IF displayExpiryNotice
      .alert.alert-warning
        | [[reset_password:password_expired]]
      // ENDIF displayExpiryNotice
      #success.alert.alert-success(style='display:none')
        button.close(type='button', data-dismiss='alert') &times;
        | &#x9;&#x9;
        strong [[reset_password:password_changed.title]]
        | &#x9;&#x9;
        p [[reset_password:password_changed.message]]
      | &#x9;
      #notice.alert.alert-warning(style='display:none')
        strong
        | &#x9;&#x9;
        p
      | &#x9;
      form#reset-form.row(onsubmit='return false;')
        .col-sm-6
          label(for='password') [[reset_password:new_password]]
          | &#x9;&#x9;&#x9;
          input#password.form-control(type='password', placeholder='[[reset_password:new_password]]')
          br
        | &#x9;&#x9;
        .col-sm-6
          label(for='repeat') [[reset_password:repeat_password]]
          | &#x9;&#x9;&#x9;
          input#repeat.form-control(type='password', placeholder='[[reset_password:repeat_password]]')
          br
        | &#x9;&#x9;
        .col-xs-12
          button#reset.btn.btn-primary.btn-block(type='submit') [[reset_password:reset_password]]
    input(type='hidden', template-variable='reset_code', value='{code}')
    // ELSE
    .panel.panel-default.panel-danger
      .panel-heading
        h3.panel-title [[reset_password:wrong_reset_code.title]]
      | &#x9;
      .panel-body
        p [[reset_password:wrong_reset_code.message]]
    // ENDIF valid
