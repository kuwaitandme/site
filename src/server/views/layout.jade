doctype html
html(lang= lang, dir= dir, ng-controller="master")
  head
    include ./include/head.jade
    if data.noIndex
      meta(name="robots", content="noindex")
    else
      meta(name="robots" content="index, follow")

  body(itemscope, itemtype="http://schema.org/WebSite", id="{{ bodyid }}", ng-class="bodyClasses", ng-style="bodyStyles", ng-cloak)
    #fb-root

    meta(itemprop="url" content="https://kuwaitandme.com/")
    header(ng-include="'components/header'")

    #page-loader
      #page-loading-bar

    //- section#page-hero

    //- Here goes the main content of the site
    main(ui-view)
      .robots.hide
        block robots
      block content

    include ./include/footer.jade