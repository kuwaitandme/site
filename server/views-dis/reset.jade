
//- # reset

extends layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        h1.legend Reset password
        form(action='/reset/' + req.params.reset_token, method='post')
          input(type='hidden', name='_csrf', value=csrf)
          .form-group
            label.control-label Confirm email address
            input(type='email', name='email', placeholder='confirm email address', autocomplete='off', required).form-control
          .form-group
            label.control-label Enter new password
            input(type='password', name='password', placeholder='enter new password', autocomplete='off', required).form-control
          button(type='submit').btn.btn-lg.btn-primary.btn-block Reset password
          hr
          p.text-center.text-muted
            small Note that reset tokens are only valid for (24) hours.
