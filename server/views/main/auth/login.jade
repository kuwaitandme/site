extends ../../layout.jade

block content
	.row.small-12
		form#login-form
			.row
				.small-12.columns
					.auth-title Login
			.row.input-row
				.small-12.columns.error
					input(type="email", name="username", placeholder="email", required)#auth-username
					small.error Please fill this field properly

			.row.input-row
				.small-12.columns.error
					input(type="password", name="password", placeholder="password", required)#auth-password
					small.error Please fill this field properly

			.row
				.small-4.small-offset-8.columns
					input(type="submit", class="submit", value="Login")

			ul#auth-messages

			#ajax-spinner
				img(src="/images/loader.gif")

