extends ../../layout.jade

block content
	h1 You need to be logged in to publish a classified!

	p So here's what you can do

	a(href="/guest/post")
		.guest-post.box
			.icon &#xf21b;
			.title Post as a guest

	a(href="/auth/login")
		.login-post.box
			.icon &#xf007;
			.title Login into your account


	a(href="/auth/signup")
		.signup-post.box
			.icon &#xf234;
			.title Signup for a new account