extends ../../layout.jade

block robots
	h1.c-title= robots.classified.title
	pre.c-description= robots.classified.description


block content
	//- Container for the admin panel
	#admin-single

	ul#single-messages

	//- Container for the slideshow
	section.c-gallery

	//- Classified's details go in here
	section.c-content

	//- Google Maps
	#map-canvas

	#reportModel.reveal-modal(data-reveal, aria-labelledby="modalTitle", aria-hidden="true", role="dialog")
		h2#modalTitle Ban this classified
		textarea(name="reason", placeholder='Write your reason here')
		input.submit(type="submit", value="Send report")
		a.close-reveal-modal(aria-label="Close") &#215;


	//- Modal to report the classified
	//- section.modal--show#report-modal(tabindex='-1', role='dialog', aria-labelledby='modal-label', aria-hidden='true')
		.modal-inner
			.title Report this classified
			form(action="?success=reportsent#", method="POST")
				input(type="hidden", name="_csrf", value="#{csrfToken}")
				input(type="hidden", name="action", value="report")
		a.modal-close(href='#!', title='Cancel Report', data-close='Close', data-dismiss='modal') ?

	//- section.modal--show#ban-modal(tabindex='-1', role='dialog', aria-labelledby='modal-label', aria-hidden='true')
		.modal-inner
			.title Ban this classified
			form(method="POST")
				input(type="hidden", name="_csrf", value="#{csrfToken}")
				input(type="hidden", name="action", value="ban")
				textarea(name="reason", placeholder='Write your reason here')
				input(type="submit", value="Send report")
		a.modal-close(href='#!', title='Cancel Report', data-close='Close', data-dismiss='modal') ?

	//- section.modal--show#reject-modal(tabindex='-1', role='dialog', aria-labelledby='modal-label', aria-hidden='true')
		.modal-inner
			.title Reject this classified
			form(method="POST")
				input(type="hidden", name="_csrf", value="#{csrfToken}")
				input(type="hidden", name="action", value="reject")
				textarea(name="reason", placeholder='Write your reason here')
				input(type="submit", value="Send report")
		a.modal-close(href='#!', title='Cancel Report', data-close='Close', data-dismiss='modal') ?

	//- JS template for the admin panel
	script(id="admin-template", type="text/template")
		include ../../components/script-templates/admin-single.jade

	//- JS Template for the slideshow
	script(id="slideshow-template", type="text/template")
		include ../../components/script-templates/slideshow.jade

	//- JS Template for the single classified
	script(id="single-template", type="text/template")
		include ../../components/script-templates/single.jade