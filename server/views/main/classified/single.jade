extends ../../layout.jade

block content
	//- Container for the admin panel
	#admin-single

	//- Container for the slideshow
	section.c-gallery

	//- Raw HTML version so that bots can crawl it's contents
	section.c-content
		h1.c-title= data.classified.title
		pre.c-description= data.classified.description

	//- Google Maps
	#map-canvas

	//- Modal to report the classified
	section.modal--show#report-modal(tabindex='-1', role='dialog', aria-labelledby='modal-label', aria-hidden='true')
		.modal-inner
			.title Report this classified
			form(action="#?success=reportsent", method="POST")
				input(type="hidden", name="action", value="report")
				textarea(name="content", placeholder='Write your reason here')
				input(type="submit", value="Send report")
		a.modal-close(href='#!', title='Cancel Report', data-close='Close', data-dismiss='modal') ?


	//- JS template for the admin panel
	script(id="admin-template", type="text/template")
		include ../../components/script-templates/admin-single.jade

	//- JS Template for the slideshow
	script(id="slideshow-template", type="text/template")
		include ../../components/script-templates/slideshow.jade

	//- JS Template for the single classified
	script(id="single-template", type="text/template")
		include ../../components/script-templates/single.jade