extends ../../layout.jade

block content
	//- Raw HTML for bots to crawl
	section
		//- Check if there are any classifieds to print
		if(!data.classifieds || data.classifieds.length == 0)
			//- There wasn't, so print a "No classifieds message"
			.noclassifieds-title #{__('page.csearch.noclassifieds')}
		else
			//- There were classifieds, print them one by one
			ul.classified-list
				div.hide
					each classified in data.classifieds
						li
							a(href="/classified/single/#{classified._id}")= classified.title

	//- JS Template for each classified in the list
	script(id="list-template", type="text/template")
		|<%
		|  var nothumb = "";
		|  if(!images || images.length == 0) nothumb = "no-thumb";
		|%>
		li(class!="classified <%= nothumb %>")
			a(href!="/classified/single/<%= _id %>")
				.container
					.thumb
						|<% if(images.length > 0) { %>
						img(src!="/uploads/thumb/<%= images[0] %>", alt="<%= title %>")
						|<% } %>
					.c-info
						.c-title <%= title %>
						.c-excerpt <%= description %>
						ul.c-meta
							li
								|<%
								|  if(price && price == 0) print("Free");
								|  else if(price && price == -1) print("Contact Owner");
								|  else print(price + " KD");
								|%>
							li <%= created %>
							|<% if(location) {
							|     var loc = app.helpers.location.find(location);
							|     if(loc && loc.name != "None") { %>
							li <%= loc.name %>
							|   <% }
							| } %>