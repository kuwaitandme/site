extends ../../layout.jade

block robots
	each classified in robots.classifieds
		a(href="/classified/#{classified._id}")= classified.title

block content
	//- include ../../components/filterbox.jade

	#search-results
		//- Container to hold the classifieds
		ul#classified-search.classified-list

		//- A spinner that gets displayed during AJAX loads
		#ajax-spinner
			img(src="/images/loader.gif")

		//- The message that gets displayed when there are no more classifieds
		#ajax-finish No classifieds

	//- JS Template for each classified in the list
	script(id="list-template", type="text/template")
		include ../../components/script-templates/search.jade