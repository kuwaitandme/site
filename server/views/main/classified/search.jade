extends ../../layout.jade

block content
	//- Raw HTML for bots to crawl
	section.classified-list
		//- Check if there are any classifieds to print
		if(!classifieds || classifieds.length == 0)
			//- There wasn't, so print a "No classifieds message"
			.noclassifieds-title #{__('page.csearch.noclassifieds')}
		else
			//- There were classifieds, print them one by one
			ul
				li
					a(href="/classified/single/#{1}") Title

	//- JS Template for each classified in the list
	script(id="list-template", type="text/template")
		| <%
		|   var nothumb = "";
		|   if(!thumbnail) nothumb = "no-thumb";
		| %>
		| <a href="http://kuwaitandme.com/en/classified/single/<%= id %>">
		|   <li class="<%= nothumb %>">
		|     <div class="thumb">
		|       <% if(thumbnail) { %>
		|         <img src="http://kuwaitandme.com/uploads/thumb/<%= thumbnail %>" alt="<%= title %>"/>
		|       <% } %>
		|     </div>
		|     <div class="c-info">
		|       <div class="c-title"><%= title %></div>
		|       <div>
		|         <span class="c-meta">
		|         <%
		|           if(price && price == 0) print("Free");
		|           else if(price && price == -1) print("Contact Owner");
		|           else print(price + " KD");
		|         %>
		|         </span>
		|         <span class="c-meta"><%= prettydate.format(daycreated) %></span>
		|         <% if(location && location != 0) { %>
		|           <span class="c-meta"><%
		|               var loc = app.helpers.location.find(location);
		|               print(loc.name);
		|             %></span>
		|         <% } %>
		|       </div>
		|     </div>
		|   </li>
		| </a>