extends ../layout.jade

block content

	section#search-classified
		h1.shadow Search for a classified
		form(action="/classified/search")
			input(type="text", name="keywords", placeholder="Keywords").search-bar
			button(type="submit").search-button &#xf002;

	section#masonry-container
		h1 Search by category
		ul.content
			div.hide
				each category in categories
					each child in category.children
						li
							a(href="/classified/search?cat=" + child._id)= child.name

	section#post-classified
		h1.shadow Post your free Classified now!
		h3.shadow it's super quick and easy
		a(href="/guest/post")
			.post-button Create Classified


	//- JS Template for the classified list
	script(id="list-template", type="text/template")
		| <li class="cl-item">
		|   <div class="cl-container">
		|     <div class="cl-title sprite-cat <%= name %>"><%= name %></div>
		|     <div class="cl-content">
		|       <ul class="cl-list">
		|       <% _.each(children, function(cat) { %>
		|         <a href="/classified/search?cat=<%= cat._id %>">
		|           <li data-id="<%= cat._id %>">
		|             <div class="name"><%= cat.name %></div>
		|             <span class="count"><%= cat.count %></span>
		|           </li>
		|         </a>
		|       <% }); %>
		|       </ul>
		|       <div class="cl-footer">
		|         <%= children.length %> categories &middot; <%= count %> classifieds
		|       </div>
		|     </div>
		|   </div>
		| </li>