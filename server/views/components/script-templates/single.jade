.page
	h1.c-title <%= title %>
	.c-description <%= description %>

.page-break

//- Category
ul.c-meta
	li
		b Categorized under:&nbsp;
		|<% if(category) {
		|	var cat = app.helpers.category.find(category);
		|	print(cat.parent + ", " + cat.child);
		|} %>
ul.c-meta
	//- Location
	|<% if(contact.location) {
	|	var loc = app.helpers.location.find(contact.location);
	|   if(loc && loc.name != "None") { %>
	li
		b Location:&nbsp;
		<%= loc.name %>
	|<% } %>

	//- Email
	|<% } if(contact.email && contact.email.length) { %>
	li
		b Email:&nbsp;
		<%= contact.email %>

	//- Phone
	|<% } if(contact.phone && contact.phone.length) { %>
	li
		b Phone:&nbsp;
		<%= contact.phone %>

	//- Address
	|<% } if(contact.address1 && contact.address1.length) { %>
	li
		b Address:&nbsp;<%= contact.address1 %>; <%= contact.address2 %>
	|<% } %>

//- Post print/report
ul.c-meta
	//- li.c-action.share
	//- 	a(href="#") Share
	li.c-action.print
		b
			a(href="javascript:window.print()") Print
	li.c-action.report
		b
			a(href="#report-modal") Report

//- Disclaimer
.c-disclaimer !{__("page.csingle.disclaimer")}