.row.small-12
  form#login-form
    .row
      .small-12.columns
        .auth-title(lang-html="page.auth.login.title") Login
    .row.input-row
      .small-12.columns.error
        input(type="email", name="username", placeholder="email", required, lang-placeholder="page.auth.login.username")#auth-username
        small.error

    .row.input-row
      .small-12.columns.error
        input(type="password", name="password", placeholder="password", required, lang-placeholder="page.auth.login.password")#auth-password
        small.error

    .row
      .small-7.small-offset-5.columns
        input.submit(type="submit", value="Login", lang-value="page.auth.login.submit")


    #ajax-spinner
      img(src="/images/loader.gif")

  .row.collapse#social-login
    .small-4.columns.facebook
      a(href="/api/auth/facebook") &#xf09a;
    .small-4.columns.google-plus
      a(href="/api/auth/google-plus") &#xf0d5;
    .small-4.columns.twitter
      a(href="/api/auth/twitter") &#xf099;
    //- .small-3.columns.yahoo
      a(href="/api/auth/yahoo") &#xf19e;

  ul#auth-messages

