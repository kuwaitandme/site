.row.small-12
  #signup-form
    .row.collapse
      .small-12.columns
        .auth-title(lang-html="page.auth.signup.title")
    .row.input-row.collapse
      .small-12.columns.error
        input(type="text", name="fullname", lang-placeholder="page.auth.signup.name", required)#auth-fullname
        small.error

    .row.input-row.collapse
      .small-12.columns.error
        input(type="email", name="username", lang-placeholder="page.auth.signup.email", required)#auth-username
        small.error

    .row.input-row.collapse
      .small-12.columns.error
        input(type="password", name="username", lang-placeholder="page.auth.signup.password", required)#auth-password
        small.error

    .row.input-row.collapse
      .small-12.columns.error
        input(type="password", name="password", lang-placeholder="page.auth.signup.repassword", required)#auth-repassword
        small.error

    .row.collapse.hide#submit-div
      .medium-7.medium-offset-5.columns
        input.submit(type="submit", lang-value="page.auth.signup.submit")


    #ajax-spinner
      img(src="/images/loader.gif")

  .row.collapse#social-login
    .small-4.columns.facebook
      a(href="/api/auth/facebook") &#xf09a;
    .small-4.columns.google-plus
      a(href="/api/auth/google-plus") &#xf0d5;
    .small-4.columns.twitter
      a(href="/api/auth/twitter") &#xf099;
    //- .small-3.columns.yahoo
      a(href="/api/auth/yahoo") &#xf19e;

  .gcaptcha

  ul#auth-messages