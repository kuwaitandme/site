.collapse.row(ng-controller="component:header")
  #main-header.columns
    #header-logo
      a(href="/", ng-click="closeHeader()")
        img(src="/images/header-logo.png")
    #grabber(ng-click="toggleHeader()")
      img(src="/images/hamburger.png")

  nav#sub-header.columns
    ul#notifications
      li You have no new notifications
    //- #nav-widgets
      #nav-widget-user.row
        .columns.medium-3.thumb
          img


    #nav-links.row
      .row
        .columns.medium-3.title Main
        .link.columns.medium-3
          a(href="/" , ng-click="closeHeader()") Home
        .link.columns.medium-3
          a(href="/classified/post", ng-click="closeHeader()") Post a classified
        .link.columns.medium-3
          a(href="/classified", ng-click="closeHeader()") Browse classifieds
      .row
        .columns.medium-3.title.dark Account
        .link.columns.medium-3
          a(href="/auth/login", ng-click="closeHeader()") Login
        .link.columns.medium-3.end
          a(href="/auth/signup", ng-click="closeHeader()") Signup
        .link.columns.medium-3.end
          a(href="/auth/reset", ng-click="closeHeader()") Reset password
      .row
        .columns.medium-3.title More
        .link.columns.medium-3
          a(href='/contact', ng-click="closeHeader()") Contact Us
        .link.columns.medium-3
          a(href="/donate", ng-click="closeHeader()") Donate
        .link.columns.medium-3
          a(href="/terms-privacy", target="_self", ng-click="closeHeader()") Usage &amp; Privacy

    #nav-footer Copyright &copy; &middot; Kuwait &amp; Me &middot; 2015


