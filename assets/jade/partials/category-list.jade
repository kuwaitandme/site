ul.categories-list(ng-controller='partials:category-list')
  li(ng-repeat="category in categories")
    .container
      .image.cat-sprite(class="{{ category.className }}")
        h1.title {{ category.name }}
      .total-count {{ category.count }} classifieds
      .children
        .child(ng-repeat="child in category.children")
          h2
            a(href!="/classified/{{ category.slug }}/{{ child.slug }}", data-view) {{ child.name }
          .count {{ child.count }}
        .child
          h3
            a(href!="/classified/{{ category.slug }}", data-vie) {{ "comp.category.viewall" | translate }}
          .count {{ category.count }}